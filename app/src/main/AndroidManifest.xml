<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.useballoon">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.Balloon"
        android:name=".Models.MyApplication">
        <activity
            android:name=".CreateAMission"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Intro"
            android:exported="false" />
        <activity
            android:name=".ForgotAccount"
            android:exported="false" />
        <activity
            android:name=".Signup"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="true">
            <intent-filter android:label="@string/app_name">
                <action
                    android:name="android.intent.action.VIEW"
                    android:screenOrientation="portrait" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.useballoon.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginOrSignup"
            android:exported="false" />
        <activity
            android:name=".SecondWelcome"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Welcome"
            android:exported="false" />
    </application>

</manifest>