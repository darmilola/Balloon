<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".CreateAMissionStep1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/groreg"
                android:text="No of Evangelists"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_text_color"
                android:textSize="15dp"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/groreg"
                android:text="How many Evangelist do you want to promote your music?"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_text_color"
                android:textSize="10dp"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/groreg"
                android:text="Recommendation: Since this is your first mission, we recommend that you hire just 1 Evangelist first so you can fully understand how everything works and then later on, you can hire as much as possible."/>


            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                numberpicker:min="0"
                numberpicker:max="10"
                numberpicker:value="-5"
                numberpicker:unit="1"
                numberpicker:focusable="false"
                numberpicker:custom_layout="@layout/number_picker_custom_layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="@color/lighter_text_color"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:maxLines="1"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:fontFamily="@font/groreg"
                android:text="Your Music or Video URL"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_text_color"
                android:textSize="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/groreg"
                android:text="The URL to the Music or Video you want to promote."/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/auth_edittext_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:id="@+id/intro_create_a_mission"
                android:layout_gravity="right"
                android:background="@drawable/auth_edittext_background"
                android:orientation="horizontal"
                android:backgroundTint="@color/balloon_primary"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send out mission"
                    android:fontFamily="@font/grobold"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="10dp"
                    app:tint="@color/White"
                    android:src="@drawable/_829869_arrow_next_right_icon"/>



            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>