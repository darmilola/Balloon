<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_gradient"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="25dp"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/grobold"
                    android:gravity="center"
                    android:text="Log in to Balloon"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_email_layout"
                    style="@style/NewRegisterTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    app:boxStrokeColor="@color/balloon_primary"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_email"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:hint="Email"
                        android:maxLength="160"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="17dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/login_password_layout"
                    style="@style/NewRegisterTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    app:boxStrokeColor="@color/balloon_primary"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/balloon_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/login_password"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:hint="Password"
                        android:maxLength="160"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="17dp"
                        android:textColor="@color/balloon_primary" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="Login"
                    android:fontFamily="@font/grobold"
                    android:letterSpacing="0.005"
                    android:backgroundTint="@color/balloon_primary"
                    android:id="@+id/login_with_email_button"
                    android:textAllCaps="false"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Forgot Password"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:fontFamily="@font/grobold"
                    android:padding="5dp"
                    android:id="@+id/login_forgot_password"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/balloon_primary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="7">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.2dp"
                        android:background="@color/grey"
                        android:layout_weight="3"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Or"
                        android:gravity="center"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0.2dp"
                        android:background="@color/lighter_text_color"
                        android:layout_weight="3"/>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Create new account"
                    android:fontFamily="@font/grobold"
                    android:letterSpacing="0.005"
                    android:backgroundTint="@color/green"
                    android:textAllCaps="false"
                    android:textSize="15dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

