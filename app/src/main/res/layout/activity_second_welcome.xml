<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/balloon_primary"
    tools:context=".Welcome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/balloon_illust_2">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="1dp"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.2"
            android:id="@+id/welcome_marketing_layout"
            android:gravity="center|left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:textSize="20dp"
                android:id="@+id/welcome_second_line1"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:gravity="center"
                android:fontFamily="@font/groblack"
                android:text="We strongly believe you are talented and you deserve to blow. And that is why we have launched balloon to make it easy for you to blow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:id="@+id/welcome_second_line2"
                android:visibility="gone"
                android:fontFamily="@font/groblack"
                android:text="Hire Envangelists on balloon to do or say anything to popularize your music."/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.8">


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="20dp"
            android:id="@+id/welcome_get_started_layout"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="21dp"
                android:textColor="@color/white"
                android:id="@+id/welcome_second_line3"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:visibility="gone"
                android:fontFamily="@font/groblack"
                android:text="The way it works is that it connects you to people(Evangelists) who are willing to do or say anything to popularize your music."/>


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:text="Get Started"
                android:textAllCaps="false"
                android:id="@+id/welcome_second_getstarted_button"
                android:textSize="16dp"
                android:textColor="@color/balloon_primary"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>