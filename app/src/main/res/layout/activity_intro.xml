<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="IntroViewModel"
            type="com.useballoon.viewModels.IntroViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececed"
    android:gravity="center"
    tools:context=".Intro">

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:indeterminateTint="@color/balloon_primary"
        android:id="@+id/intro_progress"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/intro_root">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="5dp"
                android:padding="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/welcome_waves"
                            android:src="@color/dark_text_color"
                            android:scaleType="centerCrop"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/grobold"
                        android:gravity="center"
                        android:id="@+id/introWelcomeToBalloon"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:text="On Balloon, you can hire as much people (Evangelists) as you want to do or say ANYTHING to popularize your music."
                        android:gravity="center"
                        android:textSize="15dp"
                        android:id="@+id/introWelcomeText1"
                        android:fontFamily="@font/groreg"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/light_text_color"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/grobold"
                        android:gravity="left"
                        android:id="@+id/introWelcomeText2"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/welcome_1"
                        android:gravity="center|left"
                        android:layout_marginTop="15dp"
                        android:textSize="15dp"
                        android:id="@+id/introWelcomeText3"
                        android:fontFamily="@font/groreg"
                        android:justificationMode="inter_word"
                        android:textColor="@color/light_text_color"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/lighter_text_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/welcome_2"
                        android:gravity="center|left"
                        android:layout_marginTop="15dp"
                        android:textSize="15dp"
                        android:id="@+id/introWelcomeText4"
                        android:fontFamily="@font/groreg"
                        android:justificationMode="inter_word"
                        android:textColor="@color/light_text_color"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/lighter_text_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:id="@+id/introWelcomeText5"
                        android:fontFamily="@font/groreg"
                        android:textColor="@color/light_text_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="130dp">

                    </LinearLayout>
                </LinearLayout>




            </androidx.cardview.widget.CardView>
        </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/intro_create_a_mission"
        android:background="@drawable/auth_edittext_background"
        android:orientation="horizontal"
        android:backgroundTint="@color/balloon_primary"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a mission"
            android:fontFamily="@font/grobold"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            app:tint="@color/White"
            android:src="@drawable/_829869_arrow_next_right_icon"/>



    </LinearLayout>
    </RelativeLayout>

</LinearLayout>

</layout>