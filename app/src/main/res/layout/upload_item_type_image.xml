<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/upload_item_background">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/_11677_image_icon"
            app:tint="@color/balloon_primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="View Picture"
            android:textSize="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/groreg"
            android:textColor="@color/dark_text_color"
            android:background="@drawable/upload_item_action"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Item Name"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/groreg"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/dark_text_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            app:tint="@color/red"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:src="@drawable/_03431_cancel_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:textSize="12dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/groreg"
            android:textColor="@color/red"/>

    </LinearLayout>

</LinearLayout>