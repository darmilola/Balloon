<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Welcome">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/balloon_illust_3">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:layout_marginTop="20dp"
            android:id="@+id/welcome_marketing_layout"
            android:gravity="center|left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:textFontWeight="600"
                android:id="@+id/signup_header"
                android:fontFamily="@font/groblack"
                android:text="Hire Evangelists on Balloon to do or say\n anything to popularize\n your music"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:id="@+id/welcome_get_started_layout">

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:text="Sign up"
                app:elevation="40dp"
                android:letterSpacing="0.05"
                android:fontFamily="@font/grobold"
                android:textAllCaps="false"
                android:textSize="14dp"
                app:backgroundTint="@color/balloon_primary"
                android:id="@+id/login_or_signup_signup"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:text="Login"
                android:id="@+id/login_or_signup_login"
                app:elevation="40dp"
                android:letterSpacing="0.05"
                android:fontFamily="@font/grobold"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:textColor="@color/balloon_primary"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>