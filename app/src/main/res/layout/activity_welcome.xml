<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6633"
    tools:context=".Welcome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.8"
            android:background="#ff6633"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:id="@+id/welcome_marketing_layout"
            android:gravity="center|left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center|left"
                android:layout_marginLeft="20dp"
                android:textFontWeight="600"
                android:id="@+id/welcome_header"
                android:fontFamily="@font/grobold"
                android:text="Imagine everyone on the\n internet doing or saying things\n to popularize you music..."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2.7"
            android:weightSum="0.8"
            android:background="@drawable/balloon_illust__1_">

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:gravity="top"
                android:visibility="invisible"
                android:id="@+id/welcome_get_started_layout"
                android:layout_weight="0.5">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@color/white"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Continue..."
                    app:elevation="20dp"
                    android:letterSpacing="0.05"
                    android:fontFamily="@font/grobold"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:id="@+id/welcome_go_on"
                    android:textColor="@color/balloon_primary"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>





    </LinearLayout>

</LinearLayout>